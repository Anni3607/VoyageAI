
# LLM backends: stub | openai | ollama
LLM_BACKEND=stub
OPENAI_API_KEY=
# If using Ollama locally (optional)
OLLAMA_BASE_URL=http://localhost:11434
# Backend CORS origins (comma-separated)
CORS_ORIGINS=*

# Tooling / API keys
TOOL_MODE=mock           # mock | live
OPENTRIPMAP_KEY=         # sign up for a free key at https://opentripmap.io
OPENROUTESERVICE_KEY=    # optional
# Public OSRM demo is used as fallback (no key)

# Deployment & Telegram (add to your .env when deploying)
# Set TOOL_MODE=live and add API keys to enable live tools
TOOL_MODE=mock

# Telegram (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL= # if using webhook mode (https://yourdomain/webhook)
